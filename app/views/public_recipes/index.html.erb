<div class="container mt-5 bg-light">
  <div class="row text-center">
    <div class="col-md-12 mb-3 mt-3">
      <h1>Public Recipes</h1>
    </div>
  </div>
  <% @public_recipes.each do |recipe| %>
    <div class="row  d-flex justify-content-center">
      <div class="card mb-3" style="max-width: 95%">
          <div class="row g-0">
            <div class="col-md-4 ">
              <h4 class="mt-3"><%=recipe.name %></h4>
              <p>By : <%=recipe.user.name %></p>
            </div>
            <div class="col-md-8">
              <div class="card-body">
                <p class="card-text">Total food items: <%=recipe.recipe_foods.count %></p>
                <p>Total Price : $
                <% total_price = 0 %>
                <% recipe.recipe_foods.each do |recipe_food| %>
                <% total_price += recipe_food.quantity * (Food.find(recipe_food.food_id).price) %>
                <% end %>
                <%= total_price %>
              </p>
                <p>
                  <%= link_to "Show this recipe", recipe %>
                </p>
              </div>
            </div>
          </div>
      </div>
    </div> 
  <% end %>
</div>
