<div class="">
  <div class='card mt-3'>
  <div class="card-header">
    <h2 class='heading'><%= recipe.name.capitalize %></h2>
  </div>
  <div class='card-body'>
    <h6 class=''>Public: <span class='status'><%= @recipe.public ? 'Yes' : 'No' %></span></h6>
    <h6 class=''>Preparation time: <%= recipe.preparation_time %></h6>
    <h6 class=''>Cooking time: <%= recipe.cooking_time %></h6>

  <div class="mt-3">
    <p><%= recipe.description %></p>
  </div>
  </div>

  <% if current_user == @recipe.user %>
    <div class='buttons-details'>
      <%= button_to "Generate Shopping list", general_shopping_lists_path, method: :get, class: 'btn btn-primary ms-3 btn-sm' %>
      <%= button_to "Add ingridient", new_recipe_food_path(recipe), method: :get, class: 'btn btn-success btn-sm' %>
      <span class=''>
        <%= button_to toggle_public_recipe_path(@recipe), method: :patch, class: 'btn btn-primary btn-sm' do %>
          <%= @recipe.public? ? 'Make Private' : 'Make Public' %>
        <% end %>
      </span>
    </div>
  <% end %>

  <hr/>

 <div class="table-responsive">
   <table class="table table-hover table-sm">
    <thead class="table-dark">
    <tr>
      <th>Food</th>
      <th>Measurement unit</th>
      <th>Quantity</th>
      <th>Value</th>
      <th>Actions</th>
    </tr>
    </thead>
    <tbody>
      <% if @recipe.recipe_foods.empty? %>
        <tr>Add ingredients!</tr>
      <% else %>
        <% @recipe.recipe_foods.each do |recipe_food| %>
          <tr>
            <td><%= recipe_food.food.name %></td>
            <td><%= recipe_food.food.measurement_unit %></td>
            <td><%= recipe_food.quantity %></td>
            <td>$<%= recipe_food.food.price * recipe_food.quantity %></td>
            <td class='btns'>
              <span>
                <%= link_to 'Edit', edit_recipe_food_path(@recipe, recipe_food), class: 'edit-food-btn' %>
              </span>
              <span>
                <%= button_to 'Remove', recipe_food_path(@recipe, recipe_food), method: :delete, local: true, class: 'remove-food-btn' %>
              </span>
            </td>
          </tr>
        <% end %>
      <% end %>
    </tbody>
  </table>
 </div>
</div>
</div>