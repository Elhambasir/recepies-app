
<div class="form-container mt-5 bg-light">
  <h2 class="text-center mt-3">Recipes</h2>
<%= link_to "New recipe", new_recipe_path, class:"btn btn-sm btn-success m-2 ms-4"%>
  <% @recipes.each do |recipe| %>
    <div class="row  d-flex justify-content-center">
      <div class="card mb-3" style="max-width: 95%">
          <div class="row g-0">
            <div class="col-md-4 ">
              <h4 class="mt-3 ms-3"><%=recipe.name %></h4>
              <% if recipe.user_id == current_user.id %>
                <%= button_to "Remove", recipe, method: :delete, class:" btn text-danger bordr-0 btn-sm ms-2" %>
              <% end %>
            </div>
            <div class="col-md-8">
              <div class="card-body">
                <h6 class="card-text"><%=recipe.description %></h6>
                <h6>
                  <%= link_to "Show this recipe", recipe %>
                </h6>
              </div>
            </div>
          </div>
      </div>
    </div> 
  <% end %>
</div>
