<%= form_with(model: recipe) do |form| %>
  <% if recipe.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(recipe.errors.count, "error") %> prohibited this recipe from being saved:</h2>

      <ul>
        <% recipe.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-2">
    <%= form.label :name, class:"form-label" %>
    <%= form.text_field :name, class:"form-control" %>
  </div>

  <div class="mb-2">
    <%= form.label :preparation_time, class:"form-label" %>
    <%= form.text_field :preparation_time, class:"form-control"  %>
  </div>

  <div class="mb-2">
    <%= form.label :cooking_time, class:"form-label" %>
    <%= form.text_field :cooking_time, class:"form-control"  %>
  </div>

  <div class="pe-5 mb-2">
    <%= form.label :description, class:"form-label" %>
    <%= form.text_area :description, class:"form-control"  %>
  </div>

  <div class="mb-3">
    <%= form.label :public, style: "display: inline", class:"me-2"%>
    <%= form.check_box :public, class:"mb-3 mt-3" %>
  </div>

  <div class="mb-3">
    <%# <%= form.label :user_id %>
    <%= form.text_field :user_id, value: "#{current_user.id}", hidden:"hidden" %>
  </div>

  <div>
    <%= form.submit class:"btn btn-primary" %>
  </div>
<% end %>
