
<div class="form-container">
<%= render @recipe %>
  <div class='links'>
    <% if user_signed_in? && @recipe.user_id == current_user.id %>
      <%= link_to "Edit this recipe", edit_recipe_path(@recipe), class: "btn btn-sm btn-primary" %>
      <%= button_to "Destroy this recipe", @recipe, method: :delete, class:"btn btn-sm btn-danger" %>
    <% end %>
    <%= link_to "Back to recipes", recipes_path, class: "btn btn-sm btn-primary" %>
  </div>
</div>
