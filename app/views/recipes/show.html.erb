<%= render @recipe %>

<div class="container">
  <div class='links'>
    <% if user_signed_in? && @recipe.user_id == current_user.id %>
      <%= link_to "Edit this recipe", edit_recipe_path(@recipe) %> |
      <%= button_to "Destroy this recipe", @recipe, method: :delete, class:"btn btn-sm text-danger" %>
    <% end %>
    <%= link_to "Back to recipes", recipes_path %>
  </div>
</div>
